<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="jimtrade.com.jimtrade.Mails.Sent_body">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#1653A4"/>

        <View
            android:id="@+id/view6"
            android:layout_below="@+id/view5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#6ECEF4"/>

        <RelativeLayout
            android:background="@android:color/white"
            android:layout_below="@+id/view6"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/To"
                    android:text="To:"
                    android:textColor="#808080"
                    android:textSize="14dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/name"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/To"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </RelativeLayout>

            <View
                android:id="@+id/view7"
                android:layout_below="@+id/rel1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#1a010103"/>

            <RelativeLayout
                android:id="@+id/rel4"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date"
                    android:text="Date:"
                    android:textColor="#808080"
                    android:textSize="14dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/time"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/date"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_below="@+id/rel4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#1a010103"/>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_below="@+id/view"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subject"
                    android:textSize="14dp"
                    android:text="Subject:"
                    android:textColor="#808080"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/subject_body"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/subject"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_below="@+id/rel2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#1a010103"/>

            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_below="@+id/view1"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product"
                    android:textSize="14dp"
                    android:text="Product:"
                    android:textColor="#808080"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/product_cont"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/product"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_below="@+id/rel3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#1a010103"/>

            <TextView
                android:id="@+id/details"
                android:textSize="14dp"
                android:text="Details:"
                android:textColor="#808080"
                android:layout_below="@+id/view2"
                android:layout_marginTop="5dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/message_body"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_below="@+id/view2"
                android:layout_toRightOf="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </RelativeLayout>

    </RelativeLayout>





</ScrollView>
