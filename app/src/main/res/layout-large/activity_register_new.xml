<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="jimtrade.com.jimtrade.Inquiry.Register_Now">

    <ScrollView
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#1653A4"/>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#6ECEF4"/>

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:hint="Company Name"
                android:id="@+id/Edt_Company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                 />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/Edt_Company"
                android:id="@+id/Contact_Person_Edt"
                android:hint="Contact Person"
                android:textSize="24dp" />



            <EditText
                android:id="@+id/Design_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/Contact_Person_Edt"
                android:hint="Designation"
                android:textSize="24dp" />



            <EditText
                android:id="@+id/email_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/Design_edt"
                android:hint="Email Id"
                android:textSize="24dp" />


            <TextView
                android:id="@+id/sample_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_edt"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Your email will be used to sign-in to JimTrade.com"
                />


            <EditText
                android:id="@+id/pass_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sample_text"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/cont_no_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass_edt"
                android:layout_marginTop="20dp"
                android:hint="Contact Number"
                android:inputType="number"
                android:textSize="24dp" />


            <EditText
                android:id="@+id/address_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cont_no_edt"
                android:hint="Address"
                android:textSize="24dp"
                android:layout_marginTop="20dp" />

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_below="@+id/address_edt"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_height="wrap_content"
                    android:theme="@style/TabletTheme"
                    android:layout_width="match_parent"
                    android:entries="@array/country_arrays"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/rl3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_register"
                    android:background="@drawable/layout_bg"
                    style="@style/button_tablet"
                    android:text="Register Now"
                     />

                <Button
                    android:id="@+id/button_reset"
                    android:layout_below="@+id/button_register"
                    android:layout_marginTop="20dp"
                    style="@style/button_tablet"
                    android:background="@drawable/layout_bg"
                    android:text="Reset"
                     />


            </RelativeLayout>
        </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
