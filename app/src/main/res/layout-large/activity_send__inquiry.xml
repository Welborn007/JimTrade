<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jimtrade.com.jimtrade.Send_Inquiry.Send_Inquiry_Product"
    android:background="@android:color/white">

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#1653A4"/>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_below="@+id/view"
        android:layout_height="1dp"
        android:background="#6ECEF4"/>

    <ScrollView
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/to"
                android:text="To :"
                android:textColor="#808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/Product_inquiry"
                android:layout_below="@+id/to"
                android:layout_marginTop="20dp"
                android:textColor="#808080"
                android:text="Product:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/Product_Content"
                android:layout_toRightOf="@+id/Product_inquiry"
                android:textColor="#2D64B6"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/to"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/supplier_inquiry"
                android:layout_below="@+id/Product_inquiry"
                android:layout_marginTop="20dp"
                android:text="Supplier:"
                android:textColor="#808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/Supplier_Content"
                android:layout_below="@+id/Product_inquiry"
                android:layout_toRightOf="@+id/supplier_inquiry"
                android:textColor="#2D64B6"
                android:textSize="24dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/message1"
                android:layout_marginTop="20dp"
                android:gravity="top"
                android:layout_below="@+id/supplier_inquiry"
                android:layout_alignParentLeft="true"
                android:lines="8"
                android:hint="Describe your requirement"
                android:textSize="24dp" />


            <CheckBox
                android:id="@+id/check1"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/message1"
                android:text="Get best response to your inquiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp" />

            <CheckBox
                android:id="@+id/check2"
                android:layout_below="@+id/check1"
                android:text="Send me a confirmation of this inquiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:layout_marginTop="20dp" />

            <Button
                style="@style/button_tablet"
                android:text="Send Inquiry"
                android:background="@drawable/layout_bg"
                android:layout_marginTop="20dp"
                android:id="@+id/send"
                android:layout_below="@+id/check2"
                 />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>