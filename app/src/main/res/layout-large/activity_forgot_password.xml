<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="jimtrade.com.jimtrade.Inquiry.ForgotPassword"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#1653A4"/>

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#6ECEF4"/>

            <RelativeLayout  android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:padding="5dp"
                android:background="@android:color/white">



                    <TextView
                        android:text="@string/forgot_password"
                        android:textStyle="bold"
                        android:id="@+id/fl1"
                        android:layout_centerHorizontal="true"
                        android:textSize="26dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0F54AF"
                         />



                <TextView
                    android:id="@+id/display"
                    android:layout_below="@id/fl1"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text="@string/forgot_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtask"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/display"
                    android:textSize="24dp"
                    android:text="@string/email_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edtforgot"
                    android:layout_below="@id/txtask"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:lines="2"
                    android:inputType="textEmailAddress" />


                <Button
                    android:layout_below="@id/edtforgot"
                    android:layout_marginTop="20dp"
                    android:id="@+id/submit_forgot"
                    style="@style/button_tablet"
                    android:background="@drawable/layout_bg"
                    android:text="@string/submit_btn_forgot"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>