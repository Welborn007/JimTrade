<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="jimtrade.com.jimtrade.Mails.Receive_body">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#1653A4"/>

        <View
            android:id="@+id/view6"
            android:layout_below="@+id/view5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#6ECEF4"/>

        <RelativeLayout
            android:background="@android:color/white"
            android:layout_below="@+id/view6"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/From"
                    android:text="From:"
                    android:textColor="#808080"
                    android:textSize="24dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/name"
                    android:textSize="24dp"
                    android:layout_toRightOf="@+id/From"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/info"
                    android:textSize="24dp"
                    android:layout_toRightOf="@+id/name"
                    android:layout_marginLeft="10dp"
                    android:text="(info)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0F54AF" />

                <RelativeLayout
                    android:id="@+id/details_holder"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/customborder"
                    android:layout_below="@+id/From"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/person"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/s1"
                            android:textColor="#808080"
                            android:text="Contact Person :"
                            android:textSize="18dp"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_toRightOf="@+id/s1"
                            android:id="@+id/Contact_Person_"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/design"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/s2"
                            android:layout_marginTop="1dp"
                            android:textColor="#808080"
                            android:text="Designation :"
                            android:textSize="18dp"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/designation"
                            android:layout_marginTop="1dp"
                            android:textSize="18dp"
                            android:layout_toRightOf="@+id/s2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/email_holder"
                        android:layout_below="@+id/design"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/s3"
                            android:layout_marginTop="1dp"
                            android:textColor="#808080"
                            android:text="Email :"
                            android:textSize="18dp"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_marginTop="1dp"
                            android:layout_toRightOf="@+id/s3"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/addres"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/email_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/s4"
                            android:layout_marginTop="1dp"
                            android:textColor="#808080"
                            android:text="Address :"
                            android:textSize="18dp"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_toRightOf="@+id/s4"
                            android:layout_marginTop="1dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/teleno"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@+id/addres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/s5"
                            android:layout_marginTop="1dp"
                            android:textColor="#808080"
                            android:text="Telephone :"
                            android:textSize="18dp"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tele"
                            android:layout_toRightOf="@+id/s5"
                            android:layout_marginTop="1dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/view7"
                android:layout_below="@+id/rel1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#1a010103"/>

            <RelativeLayout
                android:id="@+id/rel4"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date"
                    android:text="Date:"
                    android:textColor="#808080"
                    android:textSize="24dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/time"
                    android:textSize="24dp"
                    android:layout_toRightOf="@+id/date"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_below="@+id/rel4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#1a010103"/>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_below="@+id/view"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subject"
                    android:textSize="24dp"
                    android:text="Subject:"
                    android:textColor="#808080"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/subject_body"
                    android:textSize="24dp"
                    android:layout_toRightOf="@+id/subject"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_below="@+id/rel2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#1a010103"/>

            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_below="@+id/view1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product"
                    android:textSize="24dp"
                    android:text="Product:"
                    android:textColor="#808080"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/product_cont"
                    android:textSize="24dp"
                    android:layout_toRightOf="@+id/product"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_below="@+id/rel3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#1a010103"/>

            <TextView
                android:id="@+id/details"
                android:textSize="24dp"
                android:text="Details:"
                android:textColor="#808080"
                android:layout_below="@+id/view2"
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/message_body"
                android:textSize="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/details"
                android:layout_below="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
