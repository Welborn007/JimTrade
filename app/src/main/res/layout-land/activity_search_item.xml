<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <View
        android:id="@+id/view23"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#1653A4"/>

    <View
        android:id="@+id/view11"
        android:layout_width="fill_parent"
        android:layout_below="@+id/view23"
        android:layout_height="1dp"
        android:background="#6ECEF4"/>

    <RelativeLayout
        android:padding="5dp"
        android:layout_below="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/autoComplete"
        android:hint="Search Products...."
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_width="450dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/search"
        android:layout_toRightOf="@+id/autoComplete"
        android:layout_marginTop="10dp"
        android:background="@drawable/action_search"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/autoComplete"
        android:layout_height="wrap_content"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/Categories"
            android:text="Categories"
            android:textColor="#0F54AF"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Products"
            android:layout_alignParentRight="true"
            android:text="Products"
            android:textColor="#0F54AF"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl1"
        android:background="#1653A4"/>

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#6ECEF4"/>

        <!-- List View -->
        <ListView
            android:id="@id/list1"
            android:layout_below="@id/view1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

        <!-- List View -->
        <ListView
            android:id="@android:id/list"
            android:layout_below="@id/view1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />


        </RelativeLayout>

</RelativeLayout>